<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="it.unisa.personalTrainer.DietaActivity$PlaceholderFragment" >

   <ScrollView 
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="881dp"
        android:background="@color/blue"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="840dp"
            android:background="#FFFFFF" >

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="400dp"
                android:text="Per ottenere una buona forma fisica non basta solo allenarsi, 
il giusto rapporto di calorie e di tutte le sostanze utili per il 
nostro organismo si rivela infatti fondamentale per ottimizzare i 
risultati. Per questo motivo vogliamo consigliarti una dieta da
seguire in base all&apos;attività fisica che stai svolgendo. 
E&apos; fondamentale sottolineare che non esistono diete preconfezionate 
che vadano bene per tutte le persone, ma è invece fondamentale farsi 
consigliare da esperti in base alle proprie esigenze. Fatta questa 
importante premessa, premi il pulsante &apos;Prosegui&apos; per visualizzare i nostri consigli alimentari."
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/black"
                android:textSize="19dp"
                android:textStyle="italic" />

            <Button
                android:id="@+id/button1"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView3"
                android:layout_alignParentBottom="true"
                android:layout_alignRight="@+id/textView3"
                android:layout_marginBottom="443dp"
                android:layout_marginTop="25dp"
                android:background="#03C03C"
                android:text="Consigli alimentari" />

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="26dp"
                android:src="@drawable/salute" />

      

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/button1"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/separator"
                android:src="@drawable/bmi" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/button1"
                android:layout_alignTop="@+id/imageView2"
                android:text="TextView"
                android:textSize="30sp" />
      
        </RelativeLayout>

    </LinearLayout>
    </ScrollView>
</RelativeLayout>
