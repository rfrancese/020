<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
   
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/parte2_d" >

<ScrollView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_alignParentRight="true" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#BBFFFFFF" >

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="450dp"
                android:text="Per ottenere una buona forma fisica non basta solo allenarsi, 
il giusto rapporto di calorie e di tutte le sostanze utili per il 
nostro organismo si rivela infatti fondamentale per ottimizzare i 
risultati. Per questo motivo vogliamo consigliarti una dieta da
seguire in base all&apos;attività fisica che stai svolgendo. 
E&apos; fondamentale sottolineare che non esistono diete preconfezionate 
che vadano bene per tutte le persone, ma è invece fondamentale farsi 
consigliare da esperti in base alle proprie esigenze.\n "
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/black"
                android:textSize="19dp"
                android:textStyle="italic" />

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="26dp"
                android:src="@drawable/salute" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/imageView2"
                android:layout_alignLeft="@+id/textView1"
                android:text="BMI"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView1"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/textView4"
                android:text="        25\nsovrappeso"
                android:textColor="#DE8200" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView6"
                android:layout_alignBottom="@+id/textView6"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/textView2"
                android:text="       15\nsottopeso"
                android:textColor="#FEB500" />

            <Button
                android:id="@+id/button1"
                style="@style/btnStyleBlue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView3"
                android:layout_alignRight="@+id/textView3"
                android:layout_below="@+id/textView6"
                android:layout_marginTop="30dp"
                android:text="Consigli alimentari" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/imageView1"
                android:src="@drawable/bmi" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/button1"
                android:layout_alignTop="@+id/imageView2"
                android:text="TextView"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/imageView2"
                android:layout_alignRight="@+id/button1"
                android:layout_marginRight="23dp"
                android:text="obesità grave\n          40"
                android:textColor="#C10B00" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/imageView2"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/textView8"
                android:text="obeso\n  30"
                android:textColor="#E44502" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/imageView2"
                android:layout_marginRight="50dp"
                android:layout_toLeftOf="@+id/textView7"
                android:text="ideale\n 18.5"
                android:textColor="#00D500" />
      
        </RelativeLayout>

    </ScrollView>
 </RelativeLayout>
