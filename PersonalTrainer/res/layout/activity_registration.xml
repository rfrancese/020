<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DCDCDC"
    android:paddingLeft="4dp"
    tools:context="it.unisa.personaltrainer.RegistrationActivity"
    tools:ignore="MergeRootFrame" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="49dp"
        android:layout_marginTop="15dp"
        android:text="@string/Titolo"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#FF0000"
        android:textSize="30sp"
        android:textStyle="italic|bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="141dp"
        android:layout_height="39dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView1"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="18dp"
        android:background="@style/AppBaseTheme"
        android:text="@string/nome_utente"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="21sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/TextView02"
        android:layout_width="141dp"
        android:layout_height="39dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/TextView01"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="5dp"
        android:background="@style/AppBaseTheme"
        android:text="@string/sesso"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="21sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="141dp"
        android:layout_height="39dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView2"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="8dp"
        android:background="@style/AppBaseTheme"
        android:text="@string/eta"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="21sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="68dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView2"
        android:layout_marginLeft="47dp"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:inputType="number"
        android:textColorLink="#FF0000" />

    <TextView
        android:id="@+id/TextView06"
        android:layout_width="wrap_content"
        android:layout_height="39dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/TextView04"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="8dp"
        android:background="@style/AppBaseTheme"
        android:text="@string/polso"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="21sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/TextView04"
        android:layout_width="141dp"
        android:layout_height="39dp"
        android:layout_alignLeft="@+id/TextView03"
        android:layout_below="@+id/TextView03"
        android:layout_marginTop="11dp"
        android:background="@style/AppBaseTheme"
        android:text="@string/altezza"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="21sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/TextView05"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/EditText01"
        android:layout_toRightOf="@+id/EditText01"
        android:text="@string/centimetro" />

    <EditText
        android:id="@+id/EditText01"
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/TextView08"
        android:layout_below="@+id/TextView03"
        android:ems="10"
        android:inputType="number"
        android:textColorLink="#FF0000" />

    <RadioGroup
        android:id="@+id/radioGroup1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText2"
        android:layout_toRightOf="@+id/TextView01" >
    </RadioGroup>

    <RadioButton
        android:id="@+id/radio1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/TextView02"
        android:layout_alignBottom="@+id/TextView02"
        android:layout_alignRight="@+id/EditText01"
        android:text="@string/femmina" />

    <RadioButton
        android:id="@+id/radio0"
        android:layout_width="154dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/TextView02"
        android:layout_alignBottom="@+id/TextView02"
        android:layout_centerHorizontal="true"
        android:checked="true"
        android:text="@string/maschio" />

    <EditText
        android:id="@+id/editText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignLeft="@+id/radio1"
        android:layout_alignRight="@+id/textView1"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColorLink="#FF0000" />

    <TextView
        android:id="@+id/TextView03"
        android:layout_width="141dp"
        android:layout_height="39dp"
        android:layout_alignBaseline="@+id/editText3"
        android:layout_alignBottom="@+id/editText3"
        android:layout_alignParentLeft="true"
        android:background="@style/AppBaseTheme"
        android:text="@string/peso"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="21sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TextView02"
        android:layout_toLeftOf="@+id/radio1"
        android:ems="10"
        android:inputType="number"
        android:textColorLink="#FF0000" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/editText3"
        android:layout_toRightOf="@+id/editText3"
        android:text="@string/kg" />
    <TextView
        android:id="@+id/TextView07"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/EditText02"
        android:layout_alignBottom="@+id/EditText02"
        android:layout_alignRight="@+id/editText1"
        android:text="@string/centimetro" />

    <EditText
        android:id="@+id/EditText02"
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/TextView06"
        android:layout_alignBottom="@+id/TextView06"
        android:layout_toRightOf="@+id/TextView05"
        android:ems="10"
        android:inputType="number"
        android:textColorLink="#FF0000" />

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button1"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/TextView08"
        android:entries="@array/livelli"
        android:prompt="@string/spin"
        android:visibility="visible" />

    <TextView
        android:id="@+id/TextView08"
        android:layout_width="wrap_content"
        android:layout_height="39dp"
        android:layout_alignLeft="@+id/TextView04"
        android:layout_below="@+id/TextView06"
        android:layout_marginTop="27dp"
        android:background="@style/AppBaseTheme"
        android:text="@string/prep"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="21sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button1"
        android:layout_width="84dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="18dp"
        android:layout_toRightOf="@+id/radio0"
        android:background="#FF0000"
        android:text="@string/avanti"
        android:textStyle="italic" />
        
</RelativeLayout>