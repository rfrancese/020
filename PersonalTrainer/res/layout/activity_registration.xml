<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

<RelativeLayout
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="620dp"
    android:background="#E0FFFF" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >
    </RelativeLayout>

    <EditText
        android:id="@+id/editText4"
        android:layout_width="180dp"
        android:layout_height="37dp"
        android:layout_alignBaseline="@+id/textView6"
        android:layout_alignBottom="@+id/textView6"
        android:layout_alignLeft="@+id/editText3"
        android:layout_alignRight="@+id/editText3"
        android:ems="10"
        android:inputType="number"
        android:textSize="18sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView6"
        android:layout_below="@+id/editText4"
        android:layout_marginTop="55dp"
        android:layout_toLeftOf="@+id/editText4"
        android:text="@string/polso"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:textStyle="italic" />

    <EditText
        android:id="@+id/editText5"
        android:layout_width="180dp"
        android:layout_height="37dp"
        android:layout_alignBaseline="@+id/textView7"
        android:layout_alignBottom="@+id/textView7"
        android:layout_alignLeft="@+id/editText4"
        android:layout_alignRight="@+id/editText4"
        android:ems="10"
        android:inputType="number"
        android:singleLine="true"
        android:textSize="18sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView5"
        android:layout_below="@+id/editText3"
        android:layout_marginTop="45dp"
        android:text="@string/altezza"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:textStyle="italic" />

    <RadioGroup
        android:id="@+id/radioGroup3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editText3"
        android:layout_alignLeft="@+id/button1"
        android:layout_marginBottom="31dp"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/radio0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:checked="true"
            android:text="@string/maschio"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:textStyle="italic" />

        <RadioButton
            android:id="@+id/radio1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="@string/femmina"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:textStyle="italic" />
    </RadioGroup>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignTop="@+id/radioGroup3"
        android:text="@string/sesso"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="normal" />

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:layout_alignRight="@+id/editText5"
        android:layout_alignTop="@+id/textView8"
        android:layout_toRightOf="@+id/button1"
        android:background="@drawable/selector_slim_spinner"
        android:gravity="top"
        android:listSelector="@drawable/btn_blue_color"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="180dp"
        android:layout_height="37dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/textView3"
        android:layout_marginRight="20dp"
        android:layout_toRightOf="@+id/button1"
        android:ems="10"
        android:inputType="number"
        android:textSize="18sp"
        android:textStyle="italic" >

        <requestFocus />
    </EditText>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <ListView
            android:id="@+id/listView1"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:background="#E0FFFF"
            android:divider="@color/blue"
            android:dividerHeight="2dp" >
        </ListView>
    </LinearLayout>

    <EditText
        android:id="@+id/editText3"
        android:layout_width="180dp"
        android:layout_height="37dp"
        android:layout_alignLeft="@+id/editText2"
        android:layout_alignRight="@+id/editText2"
        android:layout_alignTop="@+id/textView5"
        android:ems="10"
        android:inputType="number"
        android:singleLine="true"
        android:textSize="18sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView7"
        android:layout_below="@+id/editText5"
        android:layout_marginTop="55dp"
        android:text="@string/prep"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView4"
        android:layout_below="@+id/editText2"
        android:layout_marginTop="115dp"
        android:text="@string/peso"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:textStyle="italic" />

    <Button
        android:id="@+id/button1"
        style="@style/btnStyleBlue"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@+id/spinner1"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="31dp"
        android:text="@string/prosegui"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/linearLayout1"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="18dp"
        android:text="@string/eta"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:textStyle="italic" />

</RelativeLayout>
</ScrollView>