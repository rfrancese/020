<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

<LinearLayout 
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0FFFF"
    android:orientation="vertical">

    <ListView
        android:id="@+id/listView1"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#E0FFFF"
        android:divider="@color/blue"
        android:dividerHeight="2dp" >
    </ListView>

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:src="@drawable/piramide" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="10dp" >

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView1"
            android:layout_alignBottom="@+id/textView1"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/textView2"
            android:text="2500"
            android:textColor="@color/rosso"
            android:textStyle="italic|bold" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="14dp"
            android:text="Il tuo fabbisogno giornaliero è di"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/black"
            android:textStyle="italic|bold" />
        
        <TextView
            android:id="@+id/textV"
            android:layout_width="wrap_content"
            android:layout_height="325dp"
            android:layout_alignLeft="@+id/textView1"
            android:layout_below="@+id/textView1"
            android:layout_marginRight="7dp"
            android:layout_marginTop="10dp"
            android:text="Per ottenere una buona forma fisica non basta solo allenarsi, 
il giusto rapporto di calorie e di tutte le sostanze utili per il 
nostro organismo si rivela infatti fondamentale per ottimizzare i 
risultati. Per questo motivo vogliamo consigliarti una dieta da
seguire in base all&apos;attività fisica che stai svolgendo. 
E&apos; fondamentale sottolineare che non esistono diete preconfezionate 
che vadano bene per tutte le persone, ma è invece fondamentale farsi 
consigliare da esperti in base alle proprie esigenze. Fatta questa 
importante premessa, premi il pulsante &apos;Prosegui&apos; per visualizzare i nostri consigli alimentari."
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:textStyle="italic" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/textView1"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="2dp"
                android:layout_marginRight="12dp"
                android:text="Kcal"
                android:textColor="@color/black"
                android:textStyle="italic|bold" />

            <Button
                android:id="@+id/button1"
                style="@style/btnStyleBlue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:text="Prosegui"
                android:textColor="#FFFFFF"
                android:textStyle="italic" />
        
    </RelativeLayout>

    

</LinearLayout>
</ScrollView>
